@using Library.Web.DTOs.Genre
@model UpdateGenreDto
{
    @ViewData["Title"] = "Редактирование жанров ";
}
<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">Редактировать жанра</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Update", "Genre", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(m => m.Id)
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, "Название жанра", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger  " })
                    </div>
                </div>
            </div>
            <div class="form-group ">
                <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-fast-backward"></i> К списку моделей</a>
                <button class="btn btn-sm btn-info rounded-0"><i class="fa fa-pencil-alt"></i>Сохранить</button>
            </div>
        }
    </div>
</div>

