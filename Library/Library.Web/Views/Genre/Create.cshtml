@using Library.Web.DTOs.Genre
@model CreateGenreDto
@{ ViewData["Title"] = "Добавление нового жанра"; }
<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">Добавление нового жанра</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Create", "Genre", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.GenreName, "Жанр", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.GenreName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.GenreName, "", new { @class = "text-danger  " })
                    </div>
                </div>
            </div>
            <div class="form-group ">
                <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-fast-backward"></i> К списку жанров</a>
                <button class="btn btn-sm btn-primary rounded-0">Сохранить</button>
            </div>
        }
    </div>
</div>